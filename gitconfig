# ~/.gitconfig

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    ui = auto
[alias]
    dt = difftool
    mt = mergetool
    co = checkout
    b = branch
    bm = branch --merged
    bum = branch --no-merged
    fa = fetch --all --prune --tags
    rekt = reset --hard
    wc = whatchanged -p
    vac = gc --aggressive --prune=now
    cp = cherry-pick
    cpx = cherry-pick -x
    pr = pull-request # hub
    wip = !git add --all && git commit -m "wip"
    unwip = "!if [[ $(git log -1 --format=format:%s) == 'wip' ]]; then git reset HEAD~1; else echo 'nope'; fi"
[user]
    name = Adam Price
    email = komidore64@gmail.com
[mergetool]
    keepBackup = false
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[apply]
    whitespace=fix
[diff]
    tool = vdiff
[merge]
    tool = vimdiff
[difftool "vdiff"]
    cmd = vimdiff -f $REMOTE $LOCAL
[tig]
    tab-size = 4
[help]
    autocorrect = 20 # no idea why, but this is in tenths of a second, so that's 2 seconds
[push]
	default = matching
